 

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model == null)
{ <h2> No Products Available!! </h2>}
else
{ 
<div class="div-block"></div>

<div class="add_remove">
    @using (Html.BeginForm("Create", "ScrapList", new { Id = Model.Id }, FormMethod.Post))
    {<input type="submit" value="x" class="button_remove w-button" />
    }
    @using (Html.BeginForm("Create", "WishLists", new { Id = Model.Id }, FormMethod.Post))
    {<input type="submit" value="+" class="button_add w-button" />
    }


</div>
<div class="product-view w-container">
    <a href="@Model.DetailPageURL" target="_blank"><img src="@Model.LargeImage" width="600" height="600" sizes="(max-width: 479px) 90vw, (max-width: 767px) 80vw, (max-width: 991px) 582.390625px, 600px" class="product-image"></a>

</div>
<!--<div class="section">
    <div class="product-name">@Model.Title</div>
</div>
<div class="product-description">@Model.OtherInfo</div> -->
 }
