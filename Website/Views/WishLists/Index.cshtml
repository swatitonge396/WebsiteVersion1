
@{
    ViewBag.Title = "Favourites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{<p> No Favourites!!!</p>}
else
{
    
        <table class="table table-responsive">

    <tbody>
        @foreach (var item in Model)
        {
            using (Html.BeginForm("Delete", "WishLists", new { id = item.Id }))
            {
            <tr>
                
                

                <td>
                    <div>
                        <img src="@item.LargeImage" class="img-thumbnail" alt="Product" style="width:25%;height:25%">
                    </div>
                </td>
                 
                <td><div class="text-center col-4"><b>@item.Title</b><br /><p>@item.OtherInfo</p><br /><p>@item.Brand</p></div></td>
                
                <td><div class="col-2 align-items-center  "><a href="@item.DetailPageURL" target="_blank" class="shop_favorite w-button">Shop</a></div></td>
                <td>
                    <div class="col-2 align-items-center">


                        <input type="submit" value="Delete" class="shop_favorite w-button" onclick="return confirm('Do you want to delete this record?');" />

                    </div>
                </td>

            </tr>
            }
        }
    </tbody>

</table>
} 

