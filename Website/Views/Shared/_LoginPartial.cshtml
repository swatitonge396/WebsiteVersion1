@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <nav role="navigation" class="nav-menu-2 w-nav-menu">
            
            @Html.ActionLink("Products", "Index", "Product", routeValues: null, htmlAttributes: new { @class = "nav-link-6 w-nav-link" })
            @Html.ActionLink("Change_Category", "Index", "Category", routeValues: null, htmlAttributes: new { @class = "nav-link-4 w-nav-link" })
            @Html.ActionLink("Favourites", "Index", "WishLists", routeValues: null, htmlAttributes: new { @class = "nav-link-5 w-nav-link" })

            <a href="settings.html" class="nav-link-3 w-nav-link">Settings</a>
            <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link-7 w-nav-link">Log off</a>
        </nav>
    }
}
else
{
    <nav role="navigation" class="nav-menu-2 w-nav-menu">
        @Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link-6 signup w-nav-link" })
        @*@Html.ActionLink("Sign In", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link-6 signup w-nav-link" })*@
        </nav>
    }
